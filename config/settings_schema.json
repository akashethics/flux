[
  {
    "name": "theme_info",
    "logo": "https:\/\/cdn.shopify.com\/s\/files\/1\/0070\/7032\/files\/2010_6_23_Shopify-Green_256x256.jpg",
    "settings": [
      {
        "type": "header",
        "content": "Timber Framework"
      },
      {
        "type": "paragraph",
        "content": "v2.1.0"
      },
      {
        "type": "paragraph",
        "content": "Theme settings allow designers to provide an easy way for any user to customize the look and feel of their shop without having to delve into HTML or CSS code. Please see our [help page on theme settings](http:\/\/docs.shopify.com\/themes\/theme-templates\/settings) to learn more about how you can make the theme customizable."
      },
      {
        "type": "paragraph",
        "content": "Review [Timber's documentation](http:\/\/shopify.github.io\/Timber\/) for any development help."
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "General colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary",
        "default": "#204a80",
        "info": "Used for text links, and primary buttons"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary",
        "default": "#dcdcdc",
        "info": "Used for secondary buttons"
      },
      {
        "type": "color",
        "id": "color_borders",
        "label": "Borders",
        "default": "#e5e5e5"
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "color",
        "id": "color_body_bg",
        "label": "Background",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_body_text",
        "label": "Text",
        "default": "#333333"
      },
      {
        "type": "header",
        "content": "Footer"
      },
      {
        "type": "color",
        "id": "color_footer_bg",
        "label": "Background",
        "default": "#f2f2f2"
      },
      {
        "type": "color",
        "id": "color_footer_text",
        "label": "Text",
        "default": "#636363"
      },
      {
        "type": "color",
        "id": "color_footer_social_link",
        "label": "Social media icons",
        "default": "#bbbbbb"
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Logo"
      },
      {
        "type": "checkbox",
        "id": "logo_use_image",
        "label": "Use custom logo"
      },
      {
        "type": "image",
        "id": "logo.png",
        "label": "Custom logo",
        "max-width": 450,
        "max-height": 200,
        "info": "450 x 200px .png"
      },
      {
        "type": "text",
        "id": "logo_max_width",
        "label": "Max logo width",
        "default": "450",
        "info": "Defined in pixels. Do not add the 'px' unit."
      },
      {
        "type": "header",
        "content": "Favicon"
      },
      {
        "type": "checkbox",
        "id": "favicon_enable",
        "label": "Use custom icon"
      },
      {
        "type": "image",
        "id": "favicon.png",
        "label": "Icon",
        "max-width": 32,
        "max-height": 32,
        "info": "32 x 32px .png required"
      }
    ]
  },
  {
    "name": "Footer",
    "settings": [
      {
        "type": "checkbox",
        "id": "footer_social_enable",
        "label": "Show social media icons"
      },
      {
        "type": "checkbox",
        "id": "footer_newsletter_enable",
        "label": "Show newsletter field"
      },
      {
        "type": "text",
        "id": "newsletter_form_action",
        "label": "MailChimp form action URL",
        "info": "[Where do I find my MailChimp form action URL?](http:\/\/docs.shopify.com\/support\/configuration\/store-customization\/where-do-i-get-my-mailchimp-form-action)"
      }
    ]
  },
  {
    "name": "Cart page",
    "settings": [
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "product_value": "(${'style = cursor:pointer' $(on:hover)})"

      },
      {
        "type": "checkbox",
        "id": "cart_vendor_enable",
        "label": "Show product vendor"
      },
      {
        "type": "select",
        "id": "ajax_cart_method",
        "label": "Cart type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ]
      },
      {
        "type": "header",
        "content": "Cart Selector with Trending Products"
      },
      {
        "type": "checkbox",
        "id": "cart_trending_enable",
        "label": "Enable trending products in cart",
        "default": true
      },
      {
        "type": "range",
        "id": "cart_trending_max_products",
        "label": "Maximum trending products to show",
        "min": 2,
        "max": 8,
        "step": 1,
        "default": 4
      },
      {
        "type": "text",
        "id": "cart_trending_collection",
        "label": "Collection for trending products",
        "default": "best-sellers",
        "info": "Enter the collection handle (e.g., 'best-sellers', 'trending')"
      },
      {
        "type": "checkbox",
        "id": "cart_trending_show_variants",
        "label": "Show product variants in trending products",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "cart_trending_auto_refresh",
        "label": "Auto-refresh trending products",
        "default": true
      },
      {
        "type": "range",
        "id": "cart_trending_refresh_interval",
        "label": "Auto-refresh interval (minutes)",
        "min": 1,
        "max": 60,
        "step": 1,
        "default": 5,
        "info": "How often to refresh trending products automatically"
      }
    ]
  },
  {
    "name": "Collection Pages",
    "settings": [
      {
        "type": "header",
        "content": "Collection Banner"
      },
      {
        "type": "checkbox",
        "id": "collection_banner_enable",
        "label": "Enable collection banner",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "collection_banner_image",
        "label": "Default banner image",
        "info": "Will use collection image if not set"
      },
      {
        "type": "text",
        "id": "collection_banner_title",
        "label": "Default banner title",
        "info": "Will use collection title if not set"
      },
      {
        "type": "textarea",
        "id": "collection_banner_subtitle",
        "label": "Default banner subtitle",
        "info": "Will use collection description if not set"
      },
      {
        "type": "select",
        "id": "collection_banner_height",
        "label": "Banner height",
        "options": [
          {
            "value": "small",
            "label": "Small",
            "product_value": "(${'style = cursor:pointer' $(on:hover)})"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ],
        "default": "medium"
      },
      {
        "type": "range",
        "id": "collection_banner_overlay_opacity",
        "label": "Overlay opacity",
        "min": 0,
        "max": 1,
        "step": 0.1,
        "default": 0.4,
        "info": "Darkness of overlay on banner image"
      },
      {
        "type": "color",
        "id": "collection_banner_text_color",
        "label": "Text color",
        "default": "#ffffff",
        "product_value": "(${'style = cursor:pointer' $(on:hover)})"

      },
      {
        "type": "checkbox",
        "id": "collection_banner_show_count",
        "label": "Show product count",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "collection_banner_show_tags",
        "label": "Show popular tags",
        "default": true
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter URL",
        "info": "https://twitter.com/shopify"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook URL",
        "info": "https://www.facebook.com/shopify"
      }
    ]
  }
]
