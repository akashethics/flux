/*============================================================================
  Cart Selector Styles
  Styling for the cart selector with trending products
==============================================================================*/

.cart-selector {
  margin: 2rem 0;
  padding: 2rem;
  background: #f8f9fa;
  border-radius: 8px;
  border: 1px solid #e9ecef;

  &__header {
    text-align: center;
    margin-bottom: 2rem;

    h3 {
      margin: 0 0 0.5rem 0;
      font-size: 1.5rem;
      font-weight: 600;
      color: #333;
    }

    p {
      margin: 0;
      color: #666;
      font-size: 0.9rem;
    }
  }

  &__products {
    margin-bottom: 2rem;
  }

  &__loading {
    text-align: center;
    padding: 2rem;

    .spinner {
      width: 40px;
      height: 40px;
      border: 3px solid #f3f3f3;
      border-top: 3px solid #007cba;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 1rem;
    }

    p {
      color: #666;
      margin: 0;
    }
  }

  &__footer {
    text-align: center;
  }

  &__refresh {
    background: #6c757d;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.2s;

    &:hover {
      background: #5a6268;
    }
  }

  &__error {
    color: #dc3545;
    text-align: center;
    padding: 1rem;
  }

  &__empty {
    color: #666;
    text-align: center;
    padding: 1rem;
    font-style: italic;
  }
}

/* Trending Products Grid */
.trending-products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
  margin: 0;

  @media (max-width: 768px) {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }
}

/* Trending Product Card */
.trending-product-card {
  background: white;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: transform 0.2s, box-shadow 0.2s;
  border: 1px solid #e9ecef;

  &:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  &.in-cart {
    opacity: 0.7;
    background: #f8f9fa;

    .trending-product-card__add-to-cart {
      background: #28a745;
      cursor: not-allowed;
    }
  }

  &__image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s;
    }

    &:hover img {
      transform: scale(1.05);
    }
  }

  &__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  &__content {
    padding: 1rem;
  }

  &__title {
    margin: 0 0 0.5rem 0;
    font-size: 1rem;
    font-weight: 500;
    line-height: 1.3;

    a {
      color: #333;
      text-decoration: none;

      &:hover {
        color: #007cba;
      }
    }
  }

  &__price {
    margin-bottom: 0.75rem;
    font-size: 0.9rem;

    &--sale {
      color: #dc3545;
      font-weight: 600;
      margin-right: 0.5rem;
    }

    &--compare {
      color: #6c757d;
      text-decoration: line-through;
    }

    &--regular {
      color: #333;
      font-weight: 500;
    }
  }

  &__variants {
    margin-bottom: 0.75rem;

    select {
      width: 100%;
      padding: 0.5rem;
      border: 1px solid #ced4da;
      border-radius: 4px;
      font-size: 0.85rem;
      background: white;

      &:focus {
        outline: none;
        border-color: #007cba;
        box-shadow: 0 0 0 2px rgba(0, 124, 186, 0.25);
      }
    }
  }

  &__actions {
    text-align: center;
  }

  &__add-to-cart {
    width: 100%;
    padding: 0.75rem;
    background: #007cba;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s;

    &:hover:not(:disabled) {
      background: #005a87;
    }

    &:disabled {
      background: #6c757d;
      cursor: not-allowed;
    }

    &.added {
      background: #28a745;
    }

    &.error {
      background: #dc3545;
    }
  }

  &__unavailable {
    text-align: center;
    padding: 0.75rem;
  }

  &__sold-out {
    color: #6c757d;
    font-weight: 500;
    font-style: italic;
  }
}

/* Spinner Animation */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Responsive Design */
@media (max-width: 480px) {
  .cart-selector {
    padding: 1rem;
    margin: 1rem 0;

    &__header h3 {
      font-size: 1.25rem;
    }
  }

  .trending-products-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .trending-product-card {
    &__content {
      padding: 0.75rem;
    }

    &__title {
      font-size: 0.9rem;
    }

    &__price {
      font-size: 0.8rem;
    }
  }
}

/* Cart Page Integration */
.cart.table-wrap {
  .cart-selector {
    margin-top: 2rem;
    border-top: 1px solid #e9ecef;
    padding-top: 2rem;
  }
}

/* Ajax Cart Integration */
.ajaxcart__inner {
  .cart-selector {
    margin: 1rem 0;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 6px;

    &__header h3 {
      font-size: 1.1rem;
      margin-bottom: 0.25rem;
    }

    &__header p {
      font-size: 0.8rem;
    }
  }

  .trending-products-grid {
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 0.75rem;
  }

  .trending-product-card {
    &__content {
      padding: 0.5rem;
    }

    &__title {
      font-size: 0.85rem;
    }

    &__price {
      font-size: 0.8rem;
      margin-bottom: 0.5rem;
    }

    &__add-to-cart {
      padding: 0.5rem;
      font-size: 0.8rem;
    }
  }
}
